<FirstScreen>:
    GridLayout:
        rows: 3
        RelativeLayout:
            size_hint_y: "0.1dp"
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size : self.parent.size
            Label:
                text:"3D Printing Predixion"
                color:0.5, 0.7, 0.9, 1
                bold: "True"

        GridLayout:
            cols:3
            canvas:
                Color:
                    rgba: 0.5, 0.7, 0.9, 1
                Rectangle:
                    size:self.size
                    pos: self.pos
            RelativeLayout:
                LabelMachine:
                RecycleMachines:
                    id: recycle_material_machine
                LayerWidget:
                TimeWidget:

            RelativeLayout:
                #Les deux colonnes blanches
                Border1:
                Border2:
                LabelPiece:
                AngleWidget:
                VolumeWidget:
                    a: True
                RecycleMaterial:
                    id: recycle_material_piece
                    a: True
                LabelSupport:
                VolumeWidget:
                    pos:self.parent.width/2-self.width/2,self.parent.height-350
                    a: False
                RecycleMaterial:
                    id: recycle_material_support
                    pos:self.parent.width/2 -self.width/2, self.parent.height-self.height - 375


            RelativeLayout:
                LabelCouple:
                CoupleAddDelete:
                RecycleCouple:
                    id: recycle_couple

        Widget:
            size_hint_y: "0.1dp"
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size:self.size
                    pos:self.pos
            Button:
                id: button_calculer
                size: self.parent.size
                background_color: 0,0,0,0
                on_release:
                    print(app.variables)
                    root.pass_screen()
                    #app.screen_manager.current = "result_screen"

            Label:
                size: self.parent.size
                text: "Calculer"
                color:0.5, 0.7, 0.8, 1
                bold: "True"




